<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}IMT Nantes Campus - Campus{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('css/materialize.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/aos.css') }}">
            <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <header>
            <img class="header-background" src="{{ asset('img/header-background.png') }}" alt="">
            <div class="header-foreground">
                {{ block('nav', 'index/nav.html.twig') }}
            </div>
        </header>


        {% block body %}{% endblock %}
        
        <footer class="margin-60">
            <div class="center icons">
                <img src="{{ asset('img/facebook.png') }}" alt="">
                <img src="{{ asset('img/instagram.png') }}" alt="">
                <img src="{{ asset('img/twitter.png') }}" alt="">
            </div>
            <div class="center">
                Copyright © 2019 | Site web réalisé par les étudiants de l’IMT Atlantique Nantes
            </div>
        </footer>
        {% block javascripts %}
            <script src="{{ asset('js/materialize.min.js') }}"></script>
            <script src="{{ asset('js/aos.js') }}"></script>
            <script>
                AOS.init();
            </script>
        {% endblock %}
    </body>
</html>
