{% extends 'base.html.twig' %}

{% block title %}BDS{% endblock %}

{% block header %}
    <div class="navTitle margin-30">{{ 'bds.bds_title' | trans | nl2br }}<br /></div>
    <div class="navDescription margin-30">{{ 'bds.bds_description' | trans| nl2br }}</div>
{% endblock %}

{% block content %}
    {{ block('bds_nav','bds/bds_nav.html.twig') }}
    <div class="section-content center">
        <div class="tinyDivider"></div>
        <div class="title">{{ 'bds.nav.leaders' | trans }}</div>
        <div class="margin-60"></div>
        <div class="container">
            {% for sport in sports %}
                <div class="subtitle" data-aos="fade-up">{{ sport.name }}</div>
                <div class="margin-20"></div>
                <div class="row" data-aos="fade-up">
                    {% for leader in sport.leaders %}
                        <div class="col {{ sport.leaders | length == 2 ? 's6' : 's6 offset-s3' }} center">
                            {% with {'img_src':  asset(leaders_path  ~ '/' ~  leader.image),'title' : leader, 'description' :  ''} %}
                                {{ block('photo_card', 'common/photo_card.html.twig') }}
                            {% endwith %}
                        </div>
                    {% endfor %}
                </div>
                <div class="margin-60"></div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
